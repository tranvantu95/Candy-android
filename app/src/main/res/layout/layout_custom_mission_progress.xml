<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fm_mission_progress_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_20dp"
        android:background="@drawable/bg_mission_inprogress_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <View
                android:id="@+id/v_progress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="@drawable/bg_mission_inprogress" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:letterSpacing="0.05"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_10sp" />
    </FrameLayout>
</LinearLayout>