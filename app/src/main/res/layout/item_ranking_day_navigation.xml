<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_36dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/prev_date"
        android:layout_width="@dimen/common_size_51dp"
        android:layout_height="@dimen/common_size_24dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/mission_size_16dp"
        android:background="@drawable/bg_ranking_yellow_border"
        android:gravity="center"
        android:text="@string/prevDate"
        android:textColor="@color/yellow_daily"
        android:textSize="@dimen/mission_size_12dp" />

    <TextView
        android:id="@+id/ranking_daily_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ranking_datetime"
        android:textAlignment="center"
        android:textColor="@color/dialog_cancel_trolley_grey"
        android:textSize="@dimen/common_text_size_12sp" />

    <TextView
        android:id="@+id/next_date"
        android:layout_width="@dimen/common_size_51dp"
        android:layout_height="@dimen/common_size_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/mission_size_16dp"
        android:background="@drawable/bg_ranking_yellow_border"
        android:gravity="center"
        android:text="@string/nextDate"
        android:textColor="@color/yellow_daily"
        android:textSize="@dimen/mission_size_12dp" />
</RelativeLayout>