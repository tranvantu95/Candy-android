<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/tutorial_commnon_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_common_button_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/tv_content">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tutorial_button_white"
            android:text="@string/back1"
            android:textColor="@color/tutorial_btn_pink"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/common_size_8dp"
            android:layout_weight="1"
            android:background="@drawable/tutorial_button"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>