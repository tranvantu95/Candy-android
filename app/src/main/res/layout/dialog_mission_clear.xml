<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingBottom="24dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/mission_clear_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="24dp"
            android:background="@drawable/relative_bottom_rounded"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/dialog_mission_clear_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ログイン情報を登録しよう"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/dialog_mission_clear_reward_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8sp"
                    android:text="獲得報酬"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/dialog_mission_clear_reward_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000"
                    android:textColor="@color/colorAccent"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/dialog_mission_clear_reward_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5sp"
                    android:text="@string/mission_point"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/mission_text_size_30sp"
                    android:gravity="bottom"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="18dp"
                android:background="@drawable/bg_btn_pink"
                android:text="@string/mission_receive_award"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="@string/cancel"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/himecas_gray"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>