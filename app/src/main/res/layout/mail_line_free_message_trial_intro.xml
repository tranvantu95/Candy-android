<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x_large_padding"
    android:padding="@dimen/x_large_padding"
    android:background="@drawable/main_frame"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_big_trial_intro" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_padding"
        android:layout_marginBottom="@dimen/small_padding"
        android:text="@string/fragment_mail_line_str_three_free_trial_message_can_be_sent"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/toolbar_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_marginBottom="@dimen/medium_padding"
        android:text="@string/fragment_mail_line_str_three_free_send_message_and_get_along"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_color_default" />
</LinearLayout>