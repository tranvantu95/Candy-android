<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background_color_3"
    android:clickable="true"
    tools:context=".fragment.mail.registration.FragmentProfileRegisterAvatar">

    <LinearLayout
        android:id="@+id/ll_register_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mission_size_8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/mission_size_24dp"
        android:paddingEnd="@dimen/mission_size_16dp"
        android:paddingStart="@dimen/mission_size_16dp"
        android:paddingTop="@dimen/mission_size_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.candy.android.custom.views.RoundCornerImageView
                android:id="@+id/ask_name_image"
                android:layout_width="@dimen/fragment_profile_register_performer_image_size"
                android:layout_height="@dimen/fragment_profile_register_performer_image_size"
                android:src="@drawable/rize4_avatar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/common_size_5dp"
                android:background="@drawable/combined_shape"
                android:lineSpacingExtra="@dimen/line_spacing_4sp"
                android:paddingEnd="@dimen/common_size_10dp"
                android:paddingStart="@dimen/common_size_20dp"
                android:paddingTop="@dimen/mission_size_16dp"
                android:text="@string/fragment_profile_register_avatar_question"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_text_size_14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/profile_avatar_size"
            android:layout_height="@dimen/profile_avatar_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/registration_size_55dp">

            <com.meg7.widget.CircleImageView
                android:id="@+id/action_change_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/_atoms_image_avatar_i" />

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/mission_size_4dp"
                android:layout_marginEnd="@dimen/mission_size_4dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/group" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_size_7dp"
            android:text="@string/str_your_picture"
            android:textColor="@color/text_color_registration"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider_size"
        android:layout_below="@+id/ll_register_avatar"
        android:background="@color/divider_custom_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/common_size_14dp"
            android:text="@string/fragment_profile_register_name_profile_can_be_changed_later"
            android:textColor="@color/text_color_default"
            android:textSize="@dimen/activity_login_forgot_pwd_text_size" />

        <Button
            android:id="@+id/btn_next"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_54dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/mission_size_24dp"
            android:layout_marginEnd="@dimen/mission_size_16dp"
            android:layout_marginStart="@dimen/mission_size_16dp"
            android:background="@drawable/btn_mission_clear_red_shadowed"
            android:text="@string/fragment_profile_register_btn_skip"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>