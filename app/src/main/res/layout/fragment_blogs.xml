<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.candy.android.fragment.BlogsFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/blog_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="@dimen/favorite_size_5dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="@dimen/blog_size_2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/blog_page_tab_color"
        app:tabTextColor="@color/mission_title_color"
        app:tabTextAppearance="@style/TabLayoutTextStyle"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/blog_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/blog_tabs" />
</RelativeLayout>
