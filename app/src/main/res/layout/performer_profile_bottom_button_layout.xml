<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_button_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/performer_profile_bottom_height"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/common_size_4dp">

    <RelativeLayout
        android:id="@+id/iv_chat_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/common_size_4dp"
        android:layout_marginTop="@dimen/common_size_4dp"
        android:layout_weight="1"
        android:background="@drawable/btn_chat_message_background">

        <TextView
            android:id="@+id/tv_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/common_size_4dp"
            android:drawableStart="@drawable/ic_chat_message_selector"
            android:gravity="center"
            android:text="@string/performer_detail_message"
            android:textColor="@color/color_text_call_video_selector"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_call_video"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/common_size_4dp"
        android:layout_marginLeft="@dimen/common_size_2dp"
        android:layout_marginTop="@dimen/common_size_4dp"
        android:layout_weight="1"
        android:background="@drawable/btn_call_video_background">

        <TextView
            android:id="@+id/tv_call_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/common_size_4dp"
            android:drawableStart="@drawable/ic_call_video_selector"
            android:gravity="center"
            android:text="@string/performer_detail_call"
            android:textColor="@color/color_text_call_video_selector"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/iv_peep_video"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/common_size_4dp"
        android:layout_marginLeft="@dimen/common_size_2dp"
        android:layout_marginTop="@dimen/common_size_4dp"
        android:layout_weight="1"
        android:background="@drawable/btn_call_video_background"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_peep_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/common_size_4dp"
            android:drawableStart="@drawable/ic_eye"
            android:gravity="center"
            android:text="@string/peep_video_string"
            android:textColor="@color/color_text_call_video_selector"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
