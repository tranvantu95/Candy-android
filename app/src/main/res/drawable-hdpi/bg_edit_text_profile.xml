<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/activity_login_edit_text_corner_radius" />
            <stroke android:width="1dip" android:color="@color/activity_login_bg_edit_text_border_focused" />
            <solid android:color="@color/activity_login_bg_edit_text_focused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:left="4dp" android:right="4dp" android:top="8dp" android:bottom="8dp" />
            <corners android:radius="@dimen/activity_login_edit_text_corner_radius" />
            <stroke android:width="1dip" android:color="@android:color/transparent" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>
