<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/pink_button_corner_radius" />
            <solid android:color="@color/btn_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/pink_button_corner_radius" />
            <gradient
                android:startColor="@color/gradient_color_red_start"
                android:endColor="@color/gradient_color_red_end"
                android:angle="-90"/>
        </shape>
    </item>
    <item android:drawable="@drawable/btn_red_shadowed" />
</selector>