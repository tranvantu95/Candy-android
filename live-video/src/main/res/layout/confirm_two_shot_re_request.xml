<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="@drawable/bg_dialog"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="#f248d5"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/dialogTextSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="#483b52"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/yesImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_pink"
            android:maxLines="1"
            android:paddingBottom="18dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:text="@string/btn_apply_again"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/noImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_border_grey"
            android:maxLines="1"
            android:paddingBottom="16dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:text="@string/btn_ok"
            android:textColor="#7f7784"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>
